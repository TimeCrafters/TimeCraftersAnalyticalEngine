<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scout_team_tele_op"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.timecrafters.analyticalengine.athena.ScoutTeamTeleOpActivity">

    <TextView
        android:text="Team Number | Team Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/team"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:text="TeleOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@+id/team"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

    <CheckBox
        android:text="Can Claim Beacons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:id="@+id/can_claim_beacons" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/max_particles_scored_in_corner"
        android:layout_below="@+id/max_particles_scored_in_vortex"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/can_score_in_corner"
        android:layout_alignStart="@+id/max_particles_scored_in_vortex"
        android:hint="Particles in Corner" />

    <CheckBox
        android:text="Can Score in Corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/can_score_in_corner"
        android:layout_alignBaseline="@+id/max_particles_scored_in_corner"
        android:layout_alignBottom="@+id/max_particles_scored_in_corner"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Can Score in Vortex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/can_score_in_vortex"
        android:layout_alignBaseline="@+id/max_particles_scored_in_vortex"
        android:layout_alignBottom="@+id/max_particles_scored_in_vortex"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Capball off Floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/max_particles_scored_in_corner"
        android:layout_alignParentStart="true"
        android:id="@+id/capball_off_floor" />

    <CheckBox
        android:text="Capball Above Crossbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/capball_above_crossbar"
        android:layout_below="@+id/capball_off_floor"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Capball Capped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/capball_capped"
        android:layout_below="@+id/capball_above_crossbar"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/save"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/capball_capped"
        android:layout_alignParentStart="true"
        android:layout_marginTop="98dp"
        android:id="@+id/teleop_notes"
        android:layout_above="@+id/save"
        android:layout_alignParentEnd="true"
        android:hint="TeleOp notes..." />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/max_particles_scored_in_vortex"
        android:hint="Particles in Vortex"
        android:layout_below="@+id/max_beacons_claimable"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/max_beacons_claimable" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/max_beacons_claimable"
        android:hint="Claimable Beacons"
        android:layout_below="@+id/textView13"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/capball_above_crossbar" />

</RelativeLayout>
